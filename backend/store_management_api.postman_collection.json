{
  "info": {
    "_postman_id": "store-management-api-collection",
    "name": "Store Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API collection for Store Management System (FastAPI backend). Manages owners, stores, store managers, customers, orders, products, inquiries, and offers."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Request OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"mobile\": \"9876543210\", \"role\": \"owner\"}"
            },
            "url": {"raw": "http://localhost:8000/auth/request-otp", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth", "request-otp"]}
          },
          "response": [{"status": "OK", "code": 200, "body": "{\"message\": \"OTP sent successfully.\"}"}]
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"mobile\": \"9876543210\", \"otp\": \"123456\", \"role\": \"owner\"}"
            },
            "url": {"raw": "http://localhost:8000/auth/verify-otp", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth", "verify-otp"]}
          },
          "response": [{"status": "OK", "code": 200, "body": "{\"message\": \"OTP verified successfully\", \"token\": \"jwt-token-here\"}"}]
        }
      ]
    },
    {
      "name": "Owners",
      "item": [
        {
          "name": "Create Owner",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"John Doe\", \"email\": \"john@example.com\", \"mobile\": \"9876543210\", \"shop_name\": \"John's Shop\", \"address\": \"123 Main St\", \"password\": \"password123\"}"
            },
            "url": {"raw": "http://localhost:8000/owners/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["owners"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "{\"id\": 1, \"name\": \"John Doe\", \"email\": \"john@example.com\", \"mobile\": \"9876543210\", \"shop_name\": \"John's Shop\", \"address\": \"123 Main St\", \"otp_code\": null, \"otp_expires_at\": null}"
          }]
        },
        {
          "name": "List Owners",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:8000/owners/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["owners"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "[{\"id\": 1, \"name\": \"John Doe\", \"email\": \"john@example.com\", \"mobile\": \"9876543210\", \"shop_name\": \"John's Shop\", \"address\": \"123 Main St\", \"otp_code\": null, \"otp_expires_at\": null}]"
          }]
        }
      ]
    },
    {
      "name": "Stores",
      "item": [
        {
          "name": "Create Store",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Store A\", \"location\": \"City Center\", \"owner_id\": 1}"
            },
            "url": {"raw": "http://localhost:8000/stores/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["stores"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "{\"id\": 1, \"name\": \"Store A\", \"location\": \"City Center\", \"owner_id\": 1}"
          }]
        },
        {
          "name": "Get Stores by Owner",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:8000/stores/?owner_id=1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["stores"], "query": [{"key": "owner_id", "value": "1"}]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "[{\"id\": 1, \"name\": \"Store A\", \"location\": \"City Center\", \"owner_id\": 1}]"
          }]
        },
        {
          "name": "Get My Store (StoreMan)",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:8000/stores/me?store_id=1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["stores", "me"], "query": [{"key": "store_id", "value": "1"}]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "{\"id\": 1, \"name\": \"Store A\", \"location\": \"City Center\", \"owner_id\": 1}"
          }]
        }
      ]
    },
    {
