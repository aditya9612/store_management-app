      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Alice\", \"email\": \"alice@example.com\", \"phone\": \"1234567890\", \"store_id\": 1}"
            },
            "url": {"raw": "http://localhost:8000/customers/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["customers"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "{\"id\": 1, \"name\": \"Alice\", \"email\": \"alice@example.com\", \"phone\": \"1234567890\", \"store_id\": 1}"
          }]
