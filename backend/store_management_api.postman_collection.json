        {
          "name": "Get Customers by Store",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:8000/customers/by-store/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["customers", "by-store", "1"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "[{\"id\": 1, \"name\": \"Alice\", \"email\": \"alice@example.com\", \"phone\": \"1234567890\", \"store_id\": 1}]"
          }]
        },
        {
          "name": "Bulk Upload Customers",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "multipart/form-data"}],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "store_id", "value": "1", "type": "text"},
                {"key": "file", "type": "file", "description": "CSV file with columns: name,email,phone"}
              ]
            },
            "url": {"raw": "http://localhost:8000/customers/upload-bulk/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["customers", "upload-bulk"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "{\"message\": \"Successfully inserted 10 customers into store 1\"}"
          }]
        }
      ]
    },
