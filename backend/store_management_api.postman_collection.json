        {
          "name": "Get Store Manager by Store",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:8000/storemans/by-store/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["storemans", "by-store", "1"]}
          },
          "response": [{
            "status": "OK",
            "code": 200,
            "body": "{\"id\": 1, \"name\": \"Bob Smith\", \"mobile\": \"8765432109\", \"store_id\": 1}"
